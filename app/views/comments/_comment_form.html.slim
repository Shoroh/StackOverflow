= simple_form_for(:comment, url: comments_url(object.class.to_s, object.id ), html: {id: "comment_form_#{object.class.to_s.downcase}_#{object.id}", data: { type: :json}}, role: "form", remote: true) do |f|
  = f.input :body, label: 'Your comment', input_html: { id: "input-#{object.class.to_s.downcase}-#{object.id}" }
  = f.submit 'Add Comment', class: 'btn btn-info'