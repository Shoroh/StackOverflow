<% if @answer.errors.any? %>
    $(".answer_form").html("<%= j render 'answers/answer_form' %>");
<% else %>
    $("#answers_qty").html("<%= pluralize(@question.answers.count, 'answer') %>:");
    $(".answers").append('<%= j render "answer", answer: @answer%>');
    $('#answer_body').val('');
<% end %>